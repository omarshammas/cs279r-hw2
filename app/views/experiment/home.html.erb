<div id='home' class='container-fluid'>

	<div class='row-fluid'>

		<div class='span12'>
			<!-- Main hero unit for a primary marketing message or call to action -->
			<div class='hero-unit'>
				<h1>Command Selection Experiment</h1>
			</div>

			<div class='row-fluid'>
				<div class='span10 offset1'>
					<p>This experiment will compare a user's performance when using Microsoft Office style Ribbons and CommandMaps for command selection.</p>
					
					<% if flash[:notice] %>
					    <div id="notice" class="alert alert-error"><%= flash[:notice] %></div>
					<% end %>

					<!-- The button to continue can appear when we put in the instructions a series of keys to press -->
					<div class='begin'>
						<%= form_tag('/begin', method: 'post') do %>
							<%= text_field_tag :turk_id, nil, id: 'preference', placeholder: 'Enter Turk ID' %>
							<%= submit_tag 'Begin', class: 'btn btn-primary btn-large'  %>
						<% end %>
					</div>				
				</div>
			</div>
		</div>
	</div>
</div>